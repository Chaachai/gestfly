<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_background"
    tools:context=".action.projet.ProjetContentActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager9"
        android:layout_width="310dp"
        android:layout_height="326dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/panel_background"
        app:layout_constraintEnd_toEndOf="@+id/viewPager10"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/viewPager10"
        app:layout_constraintTop_toBottomOf="@+id/viewPager10" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager10"
        android:layout_width="310dp"
        android:layout_height="56dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/panel_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nom_projet_info_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Nom du projet"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewPager10"
        app:layout_constraintEnd_toEndOf="@+id/viewPager10"
        app:layout_constraintStart_toStartOf="@+id/viewPager10"
        app:layout_constraintTop_toTopOf="@+id/viewPager10" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Chef de projet:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/viewPager9"
        app:layout_constraintTop_toBottomOf="@+id/etat_projet_info_popup" />

    <TextView
        android:id="@+id/chef_projet_info_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/viewPager9"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Etat du projet:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/viewPager9"
        app:layout_constraintTop_toBottomOf="@+id/dateRealisation_projet_info_popup" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Date de debut de rÃ©alisation:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/viewPager9"
        app:layout_constraintTop_toBottomOf="@+id/dateCreation_projet_info_popup" />

    <TextView
        android:id="@+id/dateRealisation_projet_info_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/viewPager9"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:text="Date de creation:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/viewPager9"
        app:layout_constraintTop_toTopOf="@+id/viewPager9" />


    <Button
        android:id="@+id/btn_start_projet_info_popup"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_green_button"
        android:drawableLeft="@drawable/ic_play_arrow_white_24dp"
        android:text="Commencer le travail"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/viewPager9"
        app:layout_constraintStart_toStartOf="@+id/viewPager9"
        app:layout_constraintTop_toBottomOf="@+id/viewPager9" />

    <Button
        android:id="@+id/btn_finish_projet_info_popup"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_green_button"
        android:drawableLeft="@drawable/ic_stop_white_24dp"
        android:text="Finir le travail"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/viewPager9"
        app:layout_constraintStart_toStartOf="@+id/viewPager9"
        app:layout_constraintTop_toBottomOf="@+id/viewPager9" />

    <TextView
        android:id="@+id/etat_projet_info_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/viewPager9"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <TextView
        android:id="@+id/dateCreation_projet_info_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/viewPager9"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

</android.support.constraint.ConstraintLayout>