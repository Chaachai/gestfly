<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_background"
    tools:context=".action.rapport.RapportContentActivity">

    <TextView
        android:id="@+id/titre_rapport_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_panel_background"
        android:text="@string/le_titre_de_ce_rapport"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <view
        android:id="@+id/view4"
        class="android.support.constraint.ConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="84dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_panel_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_rapport_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chaachai_youssef"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/date_rapport_content"
        app:layout_constraintTop_toBottomOf="@+id/date_rapport_content" />

    <TextView
        android:id="@+id/projet_tache_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titre_du_projet_ou_de_la_tache"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/user_rapport_content"
        app:layout_constraintTop_toBottomOf="@+id/user_rapport_content" />

    <TextView
        android:id="@+id/date_rapport_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/_15_03_2018"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/view4" />

    <view
        android:id="@+id/view6"
        class="android.support.constraint.ConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_panel_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titre_rapport_content" />

    <TextView
        android:id="@+id/text_rapport_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/solomon_grundy_poem"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toTopOf="@+id/view6" />

</android.support.constraint.ConstraintLayout>